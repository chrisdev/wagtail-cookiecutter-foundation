{% raw %}[program:{{ project_name }}-celery]
environment=DJANGO_SETTINGS_MODULE="{{ project_name }}.settings.production"

directory= {{ sites_dir }}/{{ project_name }}
command= {{ virtualenvs_dir }}/{{ project_name }}-env/bin/celery -A {{ project_name }} worker --loglevel=INFO 
user= {{ deploy_user }}
autostart=True
autorestart=True
numprocs=1

stdout_logfile={{ sites_dir}}/{{ project_name }}/celery-worker.log
stderr_logfile={{ sites_dir}}/{{ project_name }}/celery-worker.log

stopwaitsecs = 600 {% endraw %}

